<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:scrollbars="none"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                />
        <RelativeLayout
                android:gravity="center"
                android:layout_marginLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/borders">
            <ImageView
                    android:id="@+id/files"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_moi_faili"/>
            <TextView
                    android:layout_toRightOf="@id/files"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Мои Файлы" />

        </RelativeLayout>
    </Toolbar>

    <ImageView
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/moviephoto"
            android:contentDescription="Movie Image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tool_bar"
            android:layout_margin="10dp"
            />

    <TextView
            android:id="@+id/movieRelease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="(Release)"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/originalTitle"
            app:layout_constraintTop_toBottomOf="@id/RusTitle" />

    <TextView
            android:id="@+id/RusTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:text="Title"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/moviephoto"
            app:layout_constraintTop_toBottomOf="@id/tool_bar" />

    <TextView
            android:id="@+id/countries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="countries"
            app:layout_constraintStart_toEndOf="@+id/moviephoto"
            app:layout_constraintTop_toBottomOf="@+id/genres" />

    <TextView
            android:id="@+id/originalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="Title"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/moviephoto"
            app:layout_constraintTop_toBottomOf="@id/RusTitle" />

    <TextView
            android:id="@+id/runtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="runtime"
            app:layout_constraintStart_toEndOf="@+id/countries"
            app:layout_constraintTop_toBottomOf="@+id/genres" />

    <TextView
            android:id="@+id/tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:text="tagline"
            app:layout_constraintStart_toEndOf="@+id/moviephoto"
            app:layout_constraintTop_toBottomOf="@+id/countries" />

    <TextView
            android:id="@+id/genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="genres"
            app:layout_constraintStart_toEndOf="@+id/moviephoto"
            app:layout_constraintTop_toBottomOf="@+id/originalTitle" />

    <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#C7C7C7"
            app:layout_constraintTop_toBottomOf="@id/moviephoto" />

    <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#FF5722"
            android:text="Смотреть по подписке"
            android:textAllCaps="false"
            android:textColor="#fff"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:layout_editor_absoluteX="20dp" />

    <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#C7C7C7"
            app:layout_constraintTop_toBottomOf="@id/button2"
            tools:layout_editor_absoluteX="0dp" />

    <TextView
            android:id="@+id/overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="overview"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            tools:layout_editor_absoluteX="20dp" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/borders"
            app:layout_constraintTop_toBottomOf="@+id/overview">

        <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Рейтинг КиноПоиска:"
                android:layout_margin="10dp"/>

        <RatingBar
                android:id="@+id/starRating"
                style="@android:style/Widget.Material.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:numStars="10"
                android:rating="4.4"
                android:layout_margin="10dp"
                android:stepSize="0.1" />

        <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/starRating"
                android:text="Моя оцкнка:  -"
                android:layout_margin="10dp"/>

        <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/starRating"
                android:layout_below="@id/text1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:text="rating"/>

        <TextView
                android:id="@+id/voteCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rating"
                android:layout_below="@id/text1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:text="rating"/>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>