<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MovieDetailActivity">

    <ImageView
            android:id="@+id/postImage"
            android:layout_width="70dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_acc_active"
            android:background="#c7c7c7"/>

    <TextView
            android:id="@+id/movieName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/postImage"
            android:text="Movie Name rus"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="#000"
    />

    <TextView
            android:id="@+id/movieName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/movieName1"
            app:layout_constraintStart_toEndOf="@id/postImage"
            android:text="Movie Name eng"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:textSize="12dp"
    />

    <TextView
            android:id="@+id/genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/movieName2"
            app:layout_constraintStart_toEndOf="@id/postImage"
            android:text="genre"
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="5dp"
            android:textColor="#000"
            android:textSize="10dp"
    />


    <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/genre"
            app:layout_constraintStart_toEndOf="@id/postImage"
            android:text="rating"
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="5dp"
            android:textColor="#000"
            android:textSize="12dp"
    />

    <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/genre"
            android:text="country"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="50dp"
            android:textColor="#000"
            android:textSize="12dp"
    />

    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>